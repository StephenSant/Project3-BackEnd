<p id="notice"><%= notice %></p>

<h1>Crew Members</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Job</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crew_members.each do |crew_member| %>
      <tr>
        <td><%= crew_member.id %></td>
        <td><%= crew_member.title %></td>
        <td><%= crew_member.first_name %></td>
        <td><%= crew_member.last_name %></td>
        <td><%= crew_member.job %></td>
        <td><%= link_to 'Show', crew_member %></td>
        <td><%= link_to 'Edit', edit_crew_member_path(crew_member) %></td>
        <td><%= link_to 'Destroy', crew_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

