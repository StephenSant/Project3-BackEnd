<p id="notice"><%= notice %></p>

<h1>Log Entries</h1>

<table>
  <thead>
    <tr>
      <th>Log type</th>
      <th>Day written</th>
      <th>Content</th>
      <th>Written by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @log_entries.each do |log_entry| %>
      <tr>
        <td><%= log_entry.log_type %></td>
        <td><%= log_entry.day_written %></td>
        <td><%= log_entry.content %></td>
        <td><%= log_entry.crew_member_id %></td>
        <td><%= link_to 'Show', log_entry %></td>
        <td><%= link_to 'Edit', edit_log_entry_path(log_entry) %></td>
        <td><%= link_to 'Destroy', log_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Log Entry', new_log_entry_path %>
